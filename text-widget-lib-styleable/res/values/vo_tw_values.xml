<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- ### Configuration for phone devices (portrait) ### -->
    
    
    <!-- auto-scroll left ratio (% of screen width) -->
    <integer name="vo_tw_autoScrollRatioLeft">20</integer>
    
    <!-- auto-scroll right ratio (% of screen width) -->
    <integer name="vo_tw_autoScrollRatioRight">90</integer>
    
    <!-- auto-scroll left delay (ms) -->
    <integer name="vo_tw_autoScrollDelayLeft">3200</integer>
    
    <!-- auto-scroll right delay (ms) -->
    <integer name="vo_tw_autoScrollDelayRight">600</integer>
    
    <!-- auto-typeset left delay (ms) -->
    <integer name="vo_tw_autoTypesetDelayLeft">1000</integer>
    
    <!-- auto-typeset right delay (ms) -->
    <integer name="vo_tw_autoTypesetDelayRight">3600</integer>
    
    <!-- auto-scroll margin (% of screen width) -->
    <integer name="vo_tw_autoScrollMargin">20</integer>
    
    <!-- insert window margin (% of screen width) -->
    <integer name="vo_tw_insertWindowMargin">10</integer>
    
    <!-- user overscroll threshold (% of screen width) -->
    <integer name="vo_tw_userOverscrollThreshold">50</integer>
    
    <!-- handle overscroll threshold (% of screen width) -->
    <integer name="vo_tw_handleOverscrollThreshold">50</integer>

</resources>